<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/TableLayout" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/IncreaseRow">
            <Button
                    android:text="@string/IncreaseButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/HourDozensIncreaseButton"
                    android:layout_weight="20"/>
            <Button
                    android:text="@string/IncreaseButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/HourUnityIncreaseButton"
                    android:layout_weight="20"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="20"/>
            <Button
                    android:text="@string/IncreaseButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/MinuteDozensIncreaseButton"
                    android:layout_weight="20"/>
            <Button
                    android:text="@string/IncreaseButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="29dp" android:id="@+id/MinuteUnityIncreaseButton"
                    android:layout_weight="20"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/DisplayRow"
        >
            <TextView
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/HourDozensTextView"
                    android:textSize="36sp"
                    android:gravity="center" android:layout_weight="20"/>
            <TextView
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/HourUnityTextView"
                    android:textSize="36sp"
                    android:gravity="center" android:layout_weight="20"/>
            <TextView
                    android:text="@string/SeparatorText"
                    android:layout_height="wrap_content" android:layout_width="match_parent"
                    android:textStyle="bold" android:textSize="36sp" android:layout_weight="20"
                    android:gravity="center" android:id="@+id/SeparatorTextView"/>
            <TextView
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/MinuteDozensTextView"
                    android:textSize="36sp"
                    android:gravity="center" android:layout_weight="20"/>
            <TextView
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/MinuteUnityTextView"
                    android:textSize="36sp"
                    android:gravity="center" android:layout_weight="20"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/DecreaseRow">
            <Button
                    android:text="@string/DecreaseButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/HourDozensDecreaseButton"
                    android:layout_weight="20"/>
            <Button
                    android:text="@string/DecreaseButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/HourUnityDecreaseButton"
                    android:layout_weight="20"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="20"/>
            <Button
                    android:text="@string/DecreaseButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/MinuteDozensDecreaseButton"
                    android:layout_weight="20"/>
            <Button
                    android:text="@string/DecreaseButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="29dp" android:id="@+id/MinuteUnityDecreaseButton"
                    android:layout_weight="20"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="bottom" android:orientation="vertical"
                android:layout_weight="1" android:id="@+id/ActionRow">
            <Button
                    android:text="@string/StartButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/StartButton" android:layout_weight="33"/>
            <Button
                    android:text="@string/StopButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/StopButton" android:layout_weight="33"/>
            <Button
                    android:text="@string/PauseButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/PauseButton" android:layout_weight="33"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>